{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["es6", "dom", "es2017"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@hooks/*": ["./hooks/*"],
      "@images/*": ["./Images/*"],
      "@documents/*": ["./Documents/*"],
      "@utils/*": ["./util/*"]
    }
  },
  "include": ["src"]
}
